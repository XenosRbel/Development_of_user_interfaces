<!DOCTYPE html>
<html>
  <head>
    <title>TireService</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if notice %>
      <p class="notice"><%= notice %></p>
    <% end %>

    <% if alert %>
      <p class="alert"><%= alert %></p>
    <% end %>

    <div class="container-fluid">
      <div class="row">
        <div class="col navbar-text pull-right">
          <% if user_signed_in? %>
            <div class="alert alert-success" role="alert">
              Здравствуйте, <%= current_user.email %>
            </div>
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><%= link_to 'Projects', 'projects_path', :class => "navbar-link" %></li>
                <li class="breadcrumb-item"><%= link_to 'Teams', 'teams_path', :class => "navbar-link" %></li>
                <li class="breadcrumb-item"><%= link_to 'Users', 'persons_path', :class => "navbar-link" %></li>
                <li class="breadcrumb-item"><%= link_to 'Tasks', 'tasks_path', :class => "navbar-link" %></li>
                <li class="breadcrumb-item"><%= link_to 'Posts', 'posts_path', :class => "navbar-link" %></li>
                <li class="breadcrumb-item"><%= link_to 'Dashboard', 'reports_path', :class => "navbar-link" %></li>
              </ol>
            </nav>
          <% else %>
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link' %></li>
                <li class="breadcrumb-item"><%= link_to "Login", new_user_session_path, :class => 'navbar-link' %></li>
              </ol>
            </nav>
          <% end %>
        </div>
      </div>
    </div>
    <%= yield %>
  </body>
</html>
