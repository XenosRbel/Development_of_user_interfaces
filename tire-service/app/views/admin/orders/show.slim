.card.text-center
  .card-body
    h5.card-title
      = @order.id
  ul.list-group.list-group-flush
    li.list-group-item
      span = I18n.t("activerecord.attributes.order.start_execution_at")
      |:&nbsp;
      span = @order.start_execution_at      
    li.list-group-item
      span = I18n.t("activerecord.attributes.order.end_execution_at")
      |:&nbsp;
      span = @order.end_execution_at
    li.list-group-item
      span = I18n.t("activerecord.attributes.order.master")
      |:&nbsp;
      span = link_to @order.master.full_name, @order.master 
    li.list-group-item
      span = I18n.t("activerecord.attributes.order.customer")
      |:&nbsp;
      span = link_to @order.customer.full_name, @order.customer 
    li.list-group-item
      span = I18n.t("activerecord.attributes.order.discount")
      |:&nbsp;
      span = link_to @order.discount.title, @order.discount 